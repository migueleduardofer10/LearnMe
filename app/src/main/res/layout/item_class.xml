<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners"
    android:padding="20dp"
    android:layout_marginBottom="10dp">

    <!-- Encabezado de la Clase -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fileCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Clase 1"
            style="@style/step_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/inteligenceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:drawableEnd="@android:drawable/ic_menu_zoom"
            android:layout_marginEnd="10dp"
            style="@style/button_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Controles Inferiores -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="A침adir muestras"
            style="@style/step_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Bot칩n Volver -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:drawableStart="@android:drawable/ic_menu_zoom"
            style="@style/button_2"
            app:layout_constraintTop_toBottomOf="@+id/count"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Bot칩n Subir -->
        <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subir"
            android:drawableStart="@android:drawable/ic_menu_zoom"
            style="@style/button_2"
            app:layout_constraintTop_toBottomOf="@+id/count"
            app:layout_constraintStart_toEndOf="@+id/backButton"
            android:layout_marginStart="8dp"/>

        <!-- Bot칩n Editar -->
        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:drawableStart="@android:drawable/ic_menu_zoom"
            style="@style/button_2"
            app:layout_constraintTop_toBottomOf="@+id/count"
            app:layout_constraintStart_toEndOf="@+id/uploadButton"
            android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>