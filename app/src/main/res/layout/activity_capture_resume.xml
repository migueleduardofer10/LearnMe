<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonLayout"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/nameEditText"
                style="@style/Headline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clase 1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="Botón con ícono de editar"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/edit_40px" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/fileCountTextView"
                style="@style/Paragraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Imágenes capturadas" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="Botón con ícono de menú"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/menu_40px" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewImages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="-2dp"
            android:scrollbars="vertical" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fixed_bar"
        android:paddingHorizontal="30dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <Button
            android:id="@+id/backButton"
            style="@style/button_2"
            android:layout_alignParentStart="true"
            android:drawableTop="@drawable/keyboard_double_arrow_left_40px"
            android:text="Volver" />

        <Button
            android:id="@+id/uploadButton"
            style="@style/button_2"
            android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/upload_40px"
            android:text="Cargar" />

        <Button
            android:id="@+id/cameraButton"
            style="@style/button_2"
            android:layout_alignParentEnd="true"
            android:drawableTop="@drawable/photo_camera_40px"
            android:text="Cámara" />

    </RelativeLayout>

</RelativeLayout>
