<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="ClassButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BigButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>


    <!-- Titulos -->
    <style name="Headline1">>
        <item name="android:textSize">36.5sp</item>
        <item name="android:textColor">@color/principal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="Headline3">>
        <item name="android:textSize">28.8sp</item>
        <item name="android:textColor">@color/principal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="Headline5">>
        <item name="android:textSize">22.8sp</item>
        <item name="android:textColor">@color/principal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="Paragraph">>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secundario_1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <!-- Boton -->
    <style name="button_1" >
        <item name="android:layout_width">150sp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:background">@drawable/btn_round</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- Botones pequeño -->
    <style name="button_2" >
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/img_round</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <!-- Botones pequeño -->
    <style name="button_3" >
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_round</item>
    </style>

    <style name="button_3_blank" >
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_round_blank</item>
    </style>

</resources>