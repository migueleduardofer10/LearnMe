<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Cajas de texto -->
    <style name="input_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <!-- Botones negros -->
    <style name="button_1" >
        <item name="android:layout_width">150sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/principal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/radius</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="button_2" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:backgroundTint">@color/principal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/radius</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- Descripciones -->
    <style name="content_text">>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secundario_1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <!-- Saludo personalizado -->
    <style name="welcome_text">>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/principal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <!-- Titulo de pasos -->
    <style name="step_title">>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/principal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <!-- Subtitulo de pasos -->
    <style name="step_subtitle">>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/principal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <!-- Numero de paso  -->
    <style name="step_number">>
        <item name="android:textSize">80sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/principal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="ClassButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BigButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>